{
  "name": "@pokebot/local-monitor",
  "version": "1.0.0",
  "description": "Local inventory monitor for Pokemon products",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "logs": "tail -f logs/monitor.log",
    "status": "ts-node src/status-viewer.ts",
    "watch": "ts-node src/status-viewer.ts watch"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "tough-cookie": "^4.1.3",
    "axios-cookiejar-support": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/tough-cookie": "^4.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "keywords": ["pokemon", "inventory", "local", "monitor"],
  "author": "Pokebot Team",
  "license": "MIT"
}
